REPORT ZMESSAGE.
TABLES: SFLIGHT.
PARAMETERS: CODE LIKE SFLIGHT-CARRID.
DATA: CODE1 LIKE SFLIGHT-CONNID,
      CODE2 LIKE SFLIGHT-PLANETYPE.
      
AT SELECTION-SCREEN.
   SELECT CONNID PLANETYPE INTO (CODE1, CODE2) FROM SFLIGHT 
          WHERE CONNID = CODE.
   ENDSELECT.
  
IF SY-SUBRC <> 0.
   MESSAGE I030(ZETA).
   EXIT.
ELSE.
   WRITE: CODE1, CODE2.
ENDIF.

